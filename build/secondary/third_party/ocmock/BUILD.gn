  configs -= [ "//build/config/compiler:chromium_code" ]
  all_dependent_configs = [ ":ocmock_config" ]
  cflags = [
    "-fvisibility=default",
    "-mios-simulator-version-min=$ios_testing_deployment_target",
    "-Wno-misleading-indentation",
