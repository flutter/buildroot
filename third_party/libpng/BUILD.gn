config("libpng_public") {
  include_dirs = [ "." ]
}

source_set("libpng") {
  public_configs = [ ":libpng_public" ]

  defines = []

  sources = [
    "png.c",
    "pngerror.c",
    "pngget.c",
    "pngmem.c",
    "pngpread.c",
    "pngread.c",
    "pngrio.c",
    "pngrtran.c",
    "pngrutil.c",
    "pngset.c",
    "pngtrans.c",
    "pngwio.c",
    "pngwrite.c",
    "pngwtran.c",
    "pngwutil.c",
  ]

  if ((is_ios && !use_ios_simulator) ||
      ((is_android || is_linux) &&
       (current_cpu == "arm" || current_cpu == "arm64"))) {
    if (is_android) {
      import("//build/config/android/config.gni")
      rebased_android_toolchain_root =
          rebase_path(android_toolchain_root, root_build_dir)
      asmflags = [
        "-fno-integrated-as",
        "-B${rebased_android_toolchain_root}/bin",
      ]
    }

    sources += [
      "arm/arm_init.c",
      "arm/filter_neon.S",
      "arm/filter_neon_intrinsics.c",
    ]

    defines += [ "PNG_ARM_NEON_OPT=2" ]
  }

  deps = [
    "//third_party/zlib",
  ]
}
